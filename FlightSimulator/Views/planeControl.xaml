<UserControl x:Class="FlightSimulator.Views.planeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             xmlns:planeControl="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="550">
    
    <Grid>
        <TabControl>
            <TabItem Header="Manual" >
                <Grid>
                    <planeControl:WindowsJoystick></planeControl:WindowsJoystick>
                </Grid>
            </TabItem>
            <TabItem Header="Auto Pilot">
                <Grid>
                    <planeControl:AutoPilot></planeControl:AutoPilot>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
